<div id="wrapper">
    <div class="container-fluid">
        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    ...
                </div>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Điều chuyển tài sản</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 row">
                            <div id="dataTable_filter" class="dataTables_filter col-sm-12">
                                <form action="/assets" method="get">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <input type="search" class="form-control" placeholder="Tìm kiếm"
                                                id="txtSearch" name="keyWord" aria-controls="dataTable">
                                        </div>
                                        <button type="submit" class="btn-primary">Tìm kiếm</button>

                                        <div class="col-sm-2">
                                            <a href="/transfer/create" class="btn btn-primary btn-user btn-block">Thêm
                                                mới</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="column-stt">STT</th>
                                <th>Tên tài sản</th>
                                <th>Chi tiết</th>
                                <th>Người sử dụng trước</th>
                                <th>Người sử dụng hiện tại</th>
                                <th>Phòng ban trước</th>
                                <th>Phòng ban hiện tại</th>
                                <th>Thời gian từ</th>
                                <th>Đến</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < data.length; i++) { %>
                                <tr>
                                    <th scope="row">
                                        <%= i+1%>
                                    </th>
                                    <td>
                                        <%= data[i].assets_id %>
                                    </td>
                                    <td>
                                        <%= data[i].reason %>
                                    </td>
                                    <td>
                                        <%= data[i].staff_id_old %>
                                    </td>
                                    <td>
                                        <%= data[i].staff_id_new %>
                                    </td>
                                    <td>
                                        <%= data[i].department_id_old %>
                                    </td>
                                    <td>
                                        <%= data[i].department_id_new %>
                                    </td>
                                    <td>
                                        <%= data[i].start_date %>
                                    </td>
                                    <td>
                                        <%= data[i].end_date %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->


</div>
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>